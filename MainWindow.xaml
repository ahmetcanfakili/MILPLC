<Window x:Class="MILPLC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MILPLC"
        mc:Ignorable="d"
        xmlns:dock="https://github.com/Dirkster99/AvalonDock"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <dock:DockingManager x:Name="dockManager">

            <dock:LayoutRoot>

                <dock:LayoutPanel Orientation="Horizontal">

                    <dock:LayoutAnchorablePaneGroup DockWidth="200">
                
                    </dock:LayoutAnchorablePaneGroup>

                    <dock:LayoutDocumentPaneGroup>
                        <dock:LayoutDocumentPane>
                            <dock:LayoutDocument Title="Doküman 1">
                                <TextBlock Text="Bu Bir Dokümandır" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </dock:LayoutDocument>
                            <dock:LayoutDocument Title="Doküman 2">
                                <TextBlock Text="Başka Bir Doküman" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </dock:LayoutDocument>
                        </dock:LayoutDocumentPane>
                    </dock:LayoutDocumentPaneGroup>

                    <dock:LayoutAnchorablePaneGroup DockWidth="200">
                  
                    </dock:LayoutAnchorablePaneGroup>

                </dock:LayoutPanel>

            </dock:LayoutRoot>

        </dock:DockingManager>
    </Grid>
</Window>
