<UserControl x:Class="MILPLC.Views.ComponentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MILPLC.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Resources>
            <!-- Komponent Grupları için Stil -->
            <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="Margin" Value="5,10,5,5"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Background" Value="#ECF0F1"/>
            </Style>

            <!-- Komponent Item Stili -->
            <Style x:Key="ComponentItemStyle" TargetType="ListBoxItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="Margin" Value="5,2"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                        <Setter Property="Foreground" Value="#1565C0"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#2196F3"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Üst Panel - Komponent Listesi -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Arama Kutusu -->
                <TextBox Grid.Row="0" 
                         x:Name="SearchTextBox"
                         Margin="10" 
                         Padding="8,6"
                         FontSize="12"
                         Background="White"
                         BorderBrush="#CED4DA"
                         BorderThickness="1"
                         TextChanged="SearchTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="#495057"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Foreground" Value="#6C757D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Komponent Listesi -->
                <ListBox Grid.Row="1" 
                         x:Name="ComponentsListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{StaticResource ComponentItemStyle}"
                         SelectionChanged="ComponentsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5,2">
                                <Image Source="{Binding IconPath}" 
                                       Width="16" 
                                       Height="16" 
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}" 
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Row="1" 
                      HorizontalAlignment="Stretch" 
                      Background="#DEE2E6" 
                      Height="3"
                      ShowsPreview="True"
                      VerticalAlignment="Center"/>

        <!-- Alt Panel - Seçili Komponent Detayları -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#DEE2E6" 
                BorderThickness="0,1,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="ComponentDetailsPanel" 
                            Margin="15">

                    <!-- Varsayılan Boş Durum -->
                    <TextBlock x:Name="EmptyStateText"
                               Text="Bir komponent seçin veya arama yapın"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#6C757D"
                               FontSize="14"
                               TextAlignment="Center"
                               Margin="20"/>

                    <!-- Komponent Detayları (Dinamik olarak doldurulacak) -->
                    <StackPanel x:Name="DetailsContent" 
                                Visibility="Collapsed">

                        <!-- Komponent Başlık -->
                        <Border Background="#E8F5E8" 
                                BorderBrush="#4CAF50" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock x:Name="SelectedComponentName"
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#2E7D32"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="SelectedComponentType"
                                           FontSize="12" 
                                           Foreground="#388E3C"/>
                            </StackPanel>
                        </Border>

                        <!-- Açıklama -->
                        <TextBlock Text="Açıklama:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,10,0,5"/>
                        <TextBlock x:Name="ComponentDescription" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"/>

                        <!-- Parametreler -->
                        <TextBlock Text="Parametreler:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,10,0,5"/>
                        <ItemsControl x:Name="ParametersList" 
                                      Margin="10,0,0,15">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Name}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Value}" 
                                                   Margin="5,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Ekle Butonu -->
                        <Button x:Name="AddComponentButton"
                                Content="Komponenti Ekle"
                                Background="#2196F3"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="15,8"
                                HorizontalAlignment="Left"
                                Click="AddComponentButton_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>